<%= link_to 'New Attraction', new_attraction_path %>

<table>
  <thead>
    <th>Name</th>
    <th>Tickets</th>
    <th>Details</th>
  </thead>
  <tbody>
    <% @attractions.each do |a| %>
      <tr>
        <td><%= a.name %></td>
        <td><%= a.tickets %></td>
        <% if admin? %>
          <td><%= link_to "Show #{a.name}", attraction_path(a) %></td>
        <% else %>
          <td><%= link_to "Go on #{a.name}", attraction_path(a) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
